package robotlegs.abstract.controller.events
{
	import flash.events.Event;


	public class AbstractEvent extends Event
	{
		//--------------------------------------------------------------------------
		//
		//  Constructor
		//
		//--------------------------------------------------------------------------
		public function AbstractEvent(type : String, body : * = null)
		{
			super(type);
			_body = body;
		}
		
		//--------------------------------------------------------------------------
		//
		//  Variables
		//
		//--------------------------------------------------------------------------
		protected var _body : *;
		
		//--------------------------------------------------------------------------
		//
		//  Accessors(a-z, getter -> setter)
		//
		//--------------------------------------------------------------------------
		
		//----------------------------------
		//  body
		//----------------------------------
		public function get body() : *
		{
			return _body;
		}
		
		//--------------------------------------------------------------------------
		//
		//  Override methods
		//
		//--------------------------------------------------------------------------
		override public function clone() : Event
		{
			return new AbstractEvent(type, _body);
		}

		
	}
}




